extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3.w3-left= e.designacao
                p.w3-right
                    a(href="/") Voltar à página principal

    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Informação
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Estado
                        th Sigla
                        th SIOE
                        th Designação
                        th Internacional
                    tr
                        td= e.estado
                        td
                            a(href=e.link)= e.sigla
                        td= e.sioe
                        td= e.designacao
                        td= e.internacional

    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Tipologias
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Sigla
                        th Designação
                    each t in tipologias
                        tr
                            td
                                a(href=t.link)= t.sigla
                            td= t.designacao

    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Dona
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Código
                        th Título
                    each d in dono
                        tr
                            td
                                a(href=d.link)= d.codigo
                            td= d.titulo

    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Participante
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Código
                        th Título
                        th Tipo de Participação
                    each p in participante
                        tr
                            td
                                a(href=p.link)= p.codigo
                            td= p.titulo
                            if p.tipoPar == "temParticipanteAssessor"
                                td= "Assessor"
                            else if p.tipoPar == "temParticipanteApreciador"
                                td= "Apreciador"
                            else if p.tipoPar == "temParticipanteIniciador"
                                td= "Iniciador"
                            else if p.tipoPar == "temParticipanteComunicador"
                                td= "Comunicador"

    .w3-container.w3-section
        .w3-card
            footer.w3-container.w3-light-blue
                p
                    a(href="/") Voltar à página principal
