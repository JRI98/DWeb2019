extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3.w3-left Entidades Públicas de Portugal

            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Estado
                        th Sigla
                        th Designação
                        th Operações
                    each e in entidades
                        tr
                            td= e.estado
                            td= e.sigla
                            td= e.designacao
                            td
                                button.w3-btn.w3-circle.w3-blue-grey(onclick="window.location.assign('/entidades/" + e.id + "')") Consultar
