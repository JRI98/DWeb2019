extends layout
block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Adicionar Tarefa
            .w3-container
                form.w3-container(action="/tarefa" method="POST")
                    input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="descricao" placeholder="Descrição")
                    input.w3-input.w3-border.w3-section.w3-light-grey(type="date" name="data" placeholder="Data Limite")
                    input.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-blue-grey(type="submit" value="Enviar")

    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Lista de tarefas
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Tarefa
                        th Data Limite
                    each tarefa in lista
                        tr
                            td= tarefa.descricao
                            td= tarefa.data

    .w3-container.w3-bottom.w3-light-blue
            footer.w3-container
                p Gerado por "Lista de Tarefas Inc."
