extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Informação de Elemento
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Província
                        th Local
                        th Título
                        th Músico
                        th Duração
                        th Operações
                    tr
                        td= a.prov
                        td= a.local
                        td= a.tit
                        td= a.musico
                        td= a.duracao
                        td
                            button.w3-btn.w3-circle.w3-blue-grey(onclick="eliminar('" + a.key + "')") Eliminar
                            button.w3-btn.w3-circle.w3-blue-grey(onclick="window.location.assign('/arq/update/" + a.key + "')") Atualizar

        .w3-container.w3-light-blue
            footer.w3-container
                p
                    a(href="/") Voltar à página principal