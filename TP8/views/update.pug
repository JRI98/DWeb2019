extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Atualizar Prémio
            .w3-container
                input.w3-input.w3-border.w3-section.w3-light-grey(id="year" type="text" name="year" value=premio.year)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="category" type="text" name="category" value=premio.category)
                button.w3-btn.w3-circle.w3-border.w3-margin-bottom.w3-right.w3-blue-grey(onclick="atualizar('" + premio._id + "')") Atualizar

        .w3-container.w3-light-blue
            footer.w3-container
                p
                    a(href="/") Voltar à página principal
