extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3.w3-left Arquivo de Prémios Nobel
                button.w3-btn.w3-circle.w3-blue-grey.w3-right(style="margin-top:0.5%" onclick="window.location.assign('/premios/add')") Adicionar

            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Ano
                        th Categoria
                        th Laureados
                        th Operações
                    each p in premios
                        tr
                            td= p.year
                            td= p.category
                            td
                                ul
                                    each l in p.laureates
                                        li= l.firstname + " " + l.surname
                            td
                                button.w3-btn.w3-circle.w3-blue-grey(onclick="window.location.assign('/premios/" + p._id + "')") Consultar
                                button.w3-btn.w3-circle.w3-blue-grey(onclick="eliminar('" + p._id + "')") Eliminar
                                button.w3-btn.w3-circle.w3-blue-grey(onclick="window.location.assign('/premios/update/" + p._id + "')") Atualizar
